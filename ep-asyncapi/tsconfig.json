{
  "compileOnSave": false,
  "compilerOptions": {
    "target":"es2021",
    "module": "commonjs",
    "lib": ["es2021", "dom"],
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "strictPropertyInitialization":true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "_todo",
    "**/_todo.*"
  ]
}
